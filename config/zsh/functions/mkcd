# mkcd: create a directory (including subdirectories) and cd into it
#
# Args: $1 = directory to create
# Exit code: result of mkdir -p $1 or cd $1 if they fail or 0
#
# Examples:
#   mkcd foo
#   mkcd fizz/buzz/fizzbuzz
#
mkdir -p -- "$1" || {
    warn "$(printf '`mkdir -p -- %s` failed' "$1")" $?
    return
}

cd -- "$1" || warn "$(printf '`cd -- %s` failed' "$1")"

