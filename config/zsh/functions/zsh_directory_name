# zsh_directory_name
#
# If this function is defined, then zshell can create named directories dynamically.
#
# In this case, I've defined a named directory ~[git] that finds the git root
# of the current directory. I got the idea from the following link.
#
# https://lobste.rs/s/3uhlzd/change_custom_directory_alias_with#c_yfy8cz
#
zsh_directory_name() {
    emulate -L zsh

    if [[ $1 = n && $2 = git ]]; then
        local git_root=$(git rev-parse --show-toplevel 2>/dev/null)
        if [[ -n $git_root ]]; then
            typeset -ga reply=("$git_root")
            return 0
        fi
    fi

    return 1
}

# vim: set ts=8 sw=4 ts=4 tw=0 et ft=zsh :
