# The syntax is "key = value". Whitespace doesn't matter.

# Define colors as a sixteen-item palatte. The docs describe pairs (e.g., 0 and
# 8) as regular and bold. I find it easier to think of them in terms of their
# defualt names. I.e., 0 is black and 8 is grey.
#
# See defaults at https://www.ditig.com/publications/256-colors-cheat-sheet
#
# I am using "List of 20 Simple, Distinct Colors."
# https://sashamaps.net/docs/resources/20-colors
#
# black
palette = 0=#090909
# grey
palette = 8=#a9a9a9
# maroon
palette = 1=#800000
# red
palette = 9=#e6194b
# green
palette = 2=#3cb44b
# lime
palette = 10=#bfef45
# olive
palette = 3=#808000
# yellow
palette = 11=#ffe119
# navy
palette = 4=#000075
# blue
palette = 12=#4363d8
# purple
palette = 5=#911eb4
# fuchsia (magenta)
palette = 13=#f032e6
# teal
palette = 6=#469990
# aqua (cyan)
palette = 14=#42d4f4
# silver
palette = 7=#c0c0c0
# white
palette = 15=#ffffff

shell-integration-features = no-cursor,title

# Base colors and cursor styles.
background = ffffff
foreground= 090909
cursor-color = 090909
cursor-text = ffffff
cursor-style = block
cursor-style-blink = true

font-family = Consolas
font-size = 16
# macOS needs this.
font-thicken = true
# No ligatures, please.
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# Window padding
window-padding-x = 6
window-padding-y = 6

confirm-close-surface = false

# Enable URL matching
link-url = true
