# The syntax is "key = value". Whitespace doesn't matter.

# Define colors as a sixteen-item palatte. The docs describe pairs (e.g.,
# 0 and 8) as regular and bold. I find it easier to think of them in terms of
# their color names. I.e., 0 is black and 8 is dark grey.
#
# I took many of these colors from Sasha Trubetskoy.
# https://sashamaps.net/docs/resources/20-colors

# See also https://www.ditig.com/publications/256-colors-cheat-sheet.
#
# black
palette = 0=#000000
# dark red
palette = 1=#800000
# dark green
palette = 2=#194a1f
# dark yellow
palette = 3=#808000
# dark blue
palette = 4=#000075
# dark magenta
palette = 5=#8b008b
# dark cyan
palette = 6=#469990
# grey
palette = 7=#c5c6c8
# dark grey
palette = 8=#737373
# red
palette = 9=#d20f2c
# green
palette = 10=#3cb44d
# yellow
palette = 11=#ffe119
# blue
palette = 12=#4363d8
# magenta
palette = 13=#f032e6
# cyan
palette = 14=#42d4f4
# white
palette = 15=#ffffff

shell-integration-features = no-cursor,title

# Base colors and cursor styles.
background = ffffff
foreground= 090909
cursor-color = 090909
cursor-text = ffffff
cursor-style = bar
cursor-style-blink = true

font-family = Consolas
font-size = 16
# macOS needs this.
font-thicken = true
# No ligatures, please.
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# Window padding
window-padding-x = 6
window-padding-y = 6

confirm-close-surface = false

# Enable URL matching
link-url = true

# Right Option = Meta
macos-option-as-alt = right
