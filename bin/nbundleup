#!/usr/bin/env dash

here=$(pwd)
pathogen='https://raw.githubusercontent.com/tpope/vim-pathogen/master/autoload/pathogen.vim'

if [ -d "$HOME/.config/nvim/autoload" ]; then
	cd "$HOME/.config/nvim/autoload"
	curl -S -o pathogen.vim "$pathogen"
fi

if [ -d "$HOME/.config/nvim/bundle" ]; then
	for bundle in "$HOME/.config/nvim/bundle/"*
	do
		if [ -d "$bundle/.git" ]; then
			cd "$bundle"
			git checkout master && git up
			# cd "$bundle"
			# git pull 2>/dev/null
		fi
	done
fi

cd "$here"

npm install -g neovim
pip2 install --upgrade setuptools pip wheel pynvim
pip3 install --upgrade setuptools pip wheel cltk pynvim
chruby-exec ruby-2.5.3 -- gem install neovim
# npm install -g neovim

# vim: set ts=8 sw=8 tw=0 noet ft=sh :
