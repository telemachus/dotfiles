#!/usr/local/bin/bash

here="$(pwd)"
bundle="$HOME/.config/nvim/pack/bundle"
start="$bundle/start"
opt="$bundle/opt"

if [[ -d "$start" ]]; then
	for plugin in "$start/"*
	do
		if [[ -d "$plugin/.git" ]]; then
			cd "$plugin" || exit
			git up
		fi
	done
fi

if [[ -d "$opt" ]]; then
	for plugin in "$opt/"*
	do
		if [[ -d "$plugin/.git" ]]; then
			cd "$plugin" || exit
			git up
		fi
	done
fi

cd "$here" || exit

# npm install -g neovim
python3 -m pip install --upgrade setuptools pip wheel pynvim pylint flake8 black
# chruby-exec ruby-2.5.3 -- gem install neovim
# cpanm Neovim::Ext

# vim: set ts=8 sw=0 tw=0 noet ft=sh :
