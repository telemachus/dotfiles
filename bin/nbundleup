#!/usr/local/bin/bash

here="$(pwd)"
bundle="$HOME/.config/nvim/pack/bundle"
start="$bundle/start"
opt="$bundle/opt"

if [[ -d "$start" ]]; then
	for plugin in "$start/"*
	do
		if [[ -d "$plugin/.git" ]]; then
			cd "$plugin"
			git checkout master && git up
		fi
	done
fi

if [[ -d "$opt" ]]; then
	for plugin in "$opt/"*
	do
		if [[ -d "$plugin/.git" ]]; then
			cd "$plugin"
			git checkout master && git up
		fi
	done
fi

cd "$here"

npm install -g neovim
/usr/local/bin/python3 -m pip install --upgrade setuptools pip wheel cltk pynvim proselint
chruby-exec ruby-2.5.3 -- gem install neovim
cpanm Neovim::Ext

# vim: set ts=8 sw=8 tw=0 noet ft=sh :
